# ================================
# CONFIGURAÇÕES DE PRODUÇÃO
# ================================
NODE_ENV=production
PORT=3000

# ================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ================================
DB_HOST=seu-host-producao.com
DB_PORT=5432
DB_USER=seu_usuario_prod
DB_PASS=sua_senha_super_segura_prod
DB_NAME=auth_db_prod
DB_SSL=true

# Pool de conexões otimizado para produção
DB_MAX_CONNECTIONS=50
DB_IDLE_TIMEOUT=60000
DB_CONNECTION_TIMEOUT=5000

# ================================
# CONFIGURAÇÕES JWT
# ================================
# IMPORTANTE: Use uma chave de 256 bits muito segura!
JWT_SECRET=sua-super-chave-secreta-256-bits-muito-forte-e-unica-para-producao
JWT_EXPIRES_IN=8h

# ================================
# CONFIGURAÇÕES DE SEGURANÇA
# ================================
# CORS - Apenas domínios autorizados
ALLOWED_ORIGINS=https://seudominio.com,https://app.seudominio.com,https://admin.seudominio.com

# Rate Limiting mais restritivo
RATE_LIMIT_WINDOW_MS=300000
RATE_LIMIT_MAX_REQUESTS=50

# ================================
# CONFIGURAÇÕES DE LOGS
# ================================
LOG_LEVEL=warn
LOG_FILE=true

# ================================
# CONFIGURAÇÕES OPCIONAIS
# ================================
# Habilitar compressão
COMPRESSION_ENABLED=true

# Configurações de cache (se usando Redis no futuro)
# REDIS_URL=redis://seu-redis-host:6379
# REDIS_PASSWORD=sua_senha_redis

# Configurações de email (se precisar no futuro)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=seu@email.com
# EMAIL_PASS=sua_senha_email