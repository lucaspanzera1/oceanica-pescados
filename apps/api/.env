# ================================
# CONFIGURAÇÕES DO AMBIENTE
# ================================
NODE_ENV=development
PORT=3000

# ================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ================================
DB_HOST=host.docker.internal
DB_PORT=5432
DB_USER=admin
DB_PASS=admin
DB_NAME=oceanica

# Pool de conexões (ajuste conforme necessário)
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# ================================
# CONFIGURAÇÕES JWT
# ================================
JWT_SECRET=sua_chave_secreta_super_segura_aqui_123456789
JWT_EXPIRES_IN=24h

# ================================
# CONFIGURAÇÕES DE SEGURANÇA
# ================================
# CORS - Domínios permitidos (separados por vírgula)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173,https://192.168.1.100:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# CONFIGURAÇÕES DE LOGS
# ================================
LOG_LEVEL=info
LOG_FILE=false

# ================================
# CONFIGURAÇÕES DE PRODUÇÃO
# ================================
# Defina estas variáveis apenas em PRODUÇÃO:
# NODE_ENV=production
# DB_HOST=seu-host-producao.com
# DB_SSL=true
# JWT_SECRET=sua-super-chave-secreta-256-bits-muito-forte
# ALLOWED_ORIGINS=https://seudominio.com,https://app.seudominio.com
# LOG_FILE=true